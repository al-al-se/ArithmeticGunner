<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:ArithmeticGunner.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArithmeticGunner.Views.UserView">
    <StackPanel Orientation="Horizontal">
    <TextBox x:Name="Login">Enter your name</TextBox>
    <Button x:Name="Start Game">Start game</Button>
    <Button x:Name="Statistics">Statistics</Button>
    </StackPanel>
</UserControl>
